<% include partials/header-sub %>
	<div id="form" class="container">
		<div id="div-forms">
			<h1 class="text-center">Sign up!</h1>
			<form id="login-form" action="/register" method="POST">
				<div class="modal-body">
					<div id="div-login-msg">
						<div id="icon-login-msg" class="glyphicon glyphicon-chevron-right"></div>
						<span id="text-login-msg">Type your username and password.</span>
					</div>
					<input id="login_username" name="username" class="form-control" type="text" placeholder="Username" required>
					<br>
					<input id="login_password" name="password" class="form-control" type="password" placeholder="Password" required>

				</div>
				<div class="modal-footer">
					<div>
						<button type="submit" class="btn btn--purple btn-lg btn-block">Sign Up</button>
					</div>
				</div>
			</form>
		</div>
	</div>


	<% include partials/footer %>
