<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create new camping site</h1>
		<form action="/campgrounds" method="POST" style="width: 40%; margin: 40px auto;">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="campground">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="url">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
			<a href="/campgrounds">Go Back</a>
		</form>
		
	</div>
</div>
<% include ../partials/footer %>